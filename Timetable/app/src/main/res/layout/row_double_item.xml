<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/row_time"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:gravity="top|center"
        android:textSize="@dimen/header_font_size"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/odd_item"
            android:layout_width="match_parent"
            android:layout_weight="100"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/odd_item_content"
                android:layout_width="match_parent"
                android:layout_weight="100"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/odd_item_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="left"
                    />
                <TextView
                    android:id="@+id/odd_item_odd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:text="@string/odd"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/odd_item_content_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                />
            <TextView
                android:id="@+id/odd_item_content_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/even_item"
            android:layout_width="match_parent"
            android:layout_weight="100"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/even_item_content"
                android:layout_width="match_parent"
                android:layout_weight="100"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/even_item_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="left"
                    />
                <TextView
                    android:id="@+id/even_item_odd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:text="@string/even"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/even_item_content_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                />
            <TextView
                android:id="@+id/even_item_content_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>