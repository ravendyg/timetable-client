<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/row_time"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center"
        android:textSize="@dimen/header_font_size"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="10"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/row_title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textStyle="bold"
            android:gravity="left"
            />
        <!--android:textSize="@dimen/h3_font_size"-->
        <TextView
            android:id="@+id/row_place1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="left"
            />
        <!--android:textSize="@dimen/regular_font_size"-->
        <TextView
            android:id="@+id/row_person1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="left"
            />
        <!--android:textSize="@dimen/regular_font_size"-->
    </LinearLayout>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="10"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/row_title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textStyle="bold"
            android:gravity="right"
            />
        <!--android:textSize="@dimen/h3_font_size"-->
        <TextView
            android:id="@+id/row_place2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="right"
            />
        <!--android:textSize="@dimen/regular_font_size"-->
        <TextView
            android:id="@+id/row_person2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="right"
            />
        <!--android:textSize="@dimen/regular_font_size"-->
    </LinearLayout>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
    />

</LinearLayout>